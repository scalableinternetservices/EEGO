<div class="container">
  <%= form_tag '/groups', method: :post, id: "create_group" do %>
    <% if @friends.count > 0 %>
      <div class="row">
        <div class="col-lg-8" id="group_name_input">
          <%= label_tag(:group_name, "Create a group name:") %>
          <%= text_field_tag :group_name, nil, :required => true %>
        </div>
      </div>
      <ul class="list-group">
      <% @friends.each do |friend| %>
        <li class="list-group-item">
        <%= check_box_tag(friend.id) %>
        <%= label_tag(friend.id, friend.email) %>
        </li>
      <% end %>
    </ul>
      <button onclick="createGroup()" class="btn btn-sm btn-primary" type="button">&nbsp;Create Group&nbsp;</button>
    <% end %>
  <% end %>
</div>

<script>
function createGroup() {
    var form = $("#create_group");
    form.submit();
}
</script>
